<!--CSS to adding padding to the table-->
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<table>
    <h1>Students</h1>
    <tr>
        <!--Button to bring user to addStudent page to add a student to student list-->
        <a href="http://localhost:3000/addStudent"><button type="submit" value="Add Student">Add Student</button></a>
        <th>Student ID</th>
        <th>Name</th>
        <th>GPA</th>
        <th>Action</th>
    </tr>
    <% studentList.forEach((studentList)=>
        { %>
        <tr>
            <td>
                <%= studentList.sid %>
            </td>
            <td>
                <%= studentList.name %>
            </td>
            <td>
                <%= studentList.gpa %>
            </td>
            <!--Button to remove a student from the student list-->
            <td>
                <a href="/listStudents/delete/<%= studentList.sid %>"> <button type="button">Delete</button></a>
            </td>
        </tr>
        <% }) %>
</table>
<!--Home button to bring user back to homepage-->
<a href="http://localhost:3000/">Home</a>